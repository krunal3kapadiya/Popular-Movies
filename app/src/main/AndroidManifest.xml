<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krunal3kapadiya.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_movie"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dashBoard.DashBoardActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".genres.GenresActivity"
            android:label="Genres"
            android:parentActivityName=".dashBoard.DashBoardActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:label="Login"
            android:parentActivityName=".dashBoard.DashBoardActivity" />
        <activity
            android:name=".about.AboutUsActivity"
            android:label="About Us"
            android:parentActivityName=".dashBoard.DashBoardActivity" />
        <activity
            android:name=".dashBoard.actors.ActorsDetailActivity"
            android:label="Actors"
            android:parentActivityName=".dashBoard.DashBoardActivity" />
        <activity
            android:name=".SearchActivity"
            android:label="Search"
            android:parentActivityName=".dashBoard.DashBoardActivity" />
        <activity
            android:name=".TVDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="442d97869312f0d19f6b3b6e434013073d3e838d" />
    </application>

</manifest>