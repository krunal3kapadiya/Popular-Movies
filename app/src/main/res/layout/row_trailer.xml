<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_trailer_thumb"
        android:layout_width="@dimen/trailer_width"
        android:layout_height="@dimen/trailer_height"
        android:layout_marginBottom="@dimen/row_trailer_horizontal_margin"
        android:layout_marginEnd="@dimen/row_trailer_horizontal_margin"
        android:layout_marginRight="@dimen/row_trailer_horizontal_margin"
        android:layout_marginTop="@dimen/row_trailer_horizontal_margin"
        android:orientation="vertical" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_play" />
</RelativeLayout>